		<param name="author_place" type="list" default="1" 
			label="MOD_LATESTNEWSENHANCED_FIELD_AUTHORPLACE_LABEL" 
			description="MOD_LATESTNEWSENHANCED_FIELD_AUTHORPLACE_DESC">
