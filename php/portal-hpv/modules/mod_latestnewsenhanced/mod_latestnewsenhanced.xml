			label="MOD_LATESTNEWSENHANCED_FIELD_SHOWAUTHOR_LABEL" 
			description="MOD_LATESTNEWSENHANCED_FIELD_SHOWAUTHOR_DESC">
			<option value="1">MOD_LATESTNEWSENHANCED_VALUE_YES</option>
			<option value="0">MOD_LATESTNEWSENHANCED_VALUE_NO</option>
		</param>
