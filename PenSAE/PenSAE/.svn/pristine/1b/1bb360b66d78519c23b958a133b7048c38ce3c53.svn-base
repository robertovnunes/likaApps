<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:s="http://jboss.com/products/seam/taglib"
	xmlns:t="http://java.sun.com/jsf/html"
	xmlns:a4j="http://richfaces.org/a4j">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1" />
	<title>Informações do Curso</title>
	<t:outputStylesheet library="css" name="pensae.css" />
</h:head>
<h:body>
	<rich:panel styleClass="panel_invisivel">
		<h:outputLabel value="#{principalAluno.cursoSelecionado.nome}" styleClass="titulo_principal_pagina"/>
		<br />
		<h:outputLabel value="Objetivos" styleClass="campo_titulo" />
		<br />
		<h:outputText value="#{principalAluno.cursoSelecionado.objetivo}" />
		<br />
		<br />
		<h:outputLabel value="Ementa" styleClass="campo_titulo" />
		<br />
		<h:outputText value="#{principalAluno.cursoSelecionado.ementa}" />
		<br />
		<br />
		<h:outputLabel value="Período" styleClass="campo_titulo" />
		<br />
		<h:outputText value="De " />
		<h:outputText value="#{principalAluno.cursoSelecionado.dataInicio}">
			<f:convertDateTime type="date" pattern="dd/MM/yyyy" />
		</h:outputText>
		<h:outputText value=" até " />
		<h:outputText value="#{principalAluno.cursoSelecionado.dataFim}">
			<f:convertDateTime type="date" pattern="dd/MM/yyyy" />
		</h:outputText>
		<br />
		<br />
		<h:outputLabel value="Programação" styleClass="campo_titulo" />
		<br />
		<h:commandLink
			value="#{listaCursosAluno.carregarProgramacaoCurso(principalAluno.cursoSelecionado.id)}" />
		<h:commandLink
			value="#{listaCursosAluno.programacaoCurso.nomeArquivo}"
			actionListener="#{listaCursosAluno.downloadArquivo()}" />
		<br />
		<br />
		<h:outputLabel value="Professor responsável" styleClass="campo_titulo" />
		<br />
		<h:outputText
			value="#{principalAluno.getProfessorResponsavel(principalAluno.cursoSelecionado.id)}" />
		<br />
		<br />
	</rich:panel>
</h:body>
</html>