.frmstylizer {
	margin: auto;
	width: 750px;
	text-align: left;
}

fieldset {
	margin: 0;
	padding: 10px;
	border: 0;
	clear: left;
}

form br {
	clear: left;
}

legend,
label {
	color: #696969;
}

fieldset fieldset {
	padding: 0;
}

label { /* Possui IE fix */
	display: block;
	margin: 0 10px 0 0;
	padding: 0 0 12px 0;
	line-height: 1.2em;
	float: left;
}

label.full {
	width: 720px;
}

label.x-large {
	width: 536px;
}

label.large { /* Possui IE fix */
	width: 355px;
}


label.small { /* Possui IE fix */
	width: 172px;
}

label.x-small { /* Possui IE fix */
	width: 81px;
}

.textfield,
.select,
.text {
	border: 1px solid #C1DAD7;
	
	display: block;
	width: 100%;
}


.button {
	width: 100%;
	color: #696969; 
	
}

.alterar h2
{
font-family: helvetica, "Trebuchet MS",arial, sans-serif;
font-size:11px;	
margin:2px;
}

#necessario
{
	margin-bottom:10px;
	color:Red;
	font-family: helvetica, "Trebuchet MS",arial, sans-serif;
	font-size:12px;	
}